<% content_for :head do %>
  <%= javascript_include_tag "fileuploader" %>
<% end %>

<header>
  <ul style="display: none">
    <li><h2>Styles (<%= @styles.inspect %>)</h2></li>
    <li class="label">Insert</li>
    <% for style in @styles %>
      <li><%= style %></li>
    <% end %>
  </ul>
</header>

<div id="legacy-form"><%= form_for(@rich_image, :url => files_path) do |f| %>
  <p><%= f.file_field :image%></p>
  <%= f.submit("Upload") %>
<% end %>
</div>

<ul id="images">
  
  <li id="uploadBlock">
    <div id="upload" class="qq-upload-button placeholder">
      <div class="spinner"></div>
    </div>
    <p>Upload an image</p>
  </li>
  
<% for file in @images %>
    <%= render :partial => 'image', :locals => {:file => file} %>
<% end %>

</ul>